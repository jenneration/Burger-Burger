<h1>BurgerEats</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Uneaten Burger</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Eaten Burger</h2>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <form class="create-form" id="create-burger">
    <h2>Create a Burger</h2>
      <label for="bg"></label>
      <input class="area-jg" type="text" id="bg" name="name">
      <br>
  <button type="submit">Create This Burger</button>
  </form>
  </div>
</div>
</div>


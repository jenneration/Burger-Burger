<h1>BurgerEats</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Uneaten Burger</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Eaten Burger</h2>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <h2>Create a Burger</h2>
    <form id="create-burger">
      <label for="bg">New Burger:</label>
      <input type="text" id="bg" name="name">
  </div>
  <button type="submit">Create This Burger</button>
  </form>
</div>
</div>


